# Introduce variables
total_rainfall = 0
total_months = 0

# Ask how many years we want to track
num_years = int(input("How many years would you like to track? "))

# Outer loop for each year
for year in range(num_years):
  print(f"\n Year {year + 1}")
  # Inner loop for each month
  for month in range(1, 13):
    while True:
      try:
        # Ask for the rainfall for teh current month
        rainfall = float(input(f"Enter the inches of rainfall for month {month}: "))
        # make sure the rainfall isn't negative!!
        if rainfall >= 0:
          total_rainfall += rainfall
          total_months += 1
          break
        else:
          print("Rainfall cannot be a negative number. Please try again.")
      except ValueError:
        print("Invalid input. Please enter a numerical value.")
average_rainfall = total_rainfall / num_years
print(f"\n Rainfall Summary \n")
print(f"Total months tracked: {total_months:.2f}")
print(f"Total rainfall: {total_rainfall:.2f} inches")
print(f"Average monthly rainfall: {average_rainfall:.2f} inches")
